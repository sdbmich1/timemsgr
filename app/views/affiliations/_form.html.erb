<div class="fields">
  <%= form_for @user, :as => :user, :url => affiliation_path(@user), :validate => true do |f| %>
 	<div id="event_errors" style="display:none" class="error"></div>
	<%= render :partial => 'affiliations', :locals => { :f => f } %>
	<% if action_name == 'new' %>
		<p><%= f.submit 'Finish', :class => "nav-right" %></p>
	<% else %>
		<p><%= f.submit "Save" %></p>
	<% end %>
  <% end %>
</div>
