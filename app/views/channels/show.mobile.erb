<%= render :partial => 'mobile/index_form', :locals => {:title => 'Channel Events'} %>

<%= content_for :content do %>
 	<div class="event-image center-wrapper">
		<%= render :partial => 'mobile/show_photo', :locals => {:model => @channel, :vtype => 'e-pic', :file_name => 'camera.png', :psize => '80x80' }%>
	</div>
	
  	<ul data-role="listview">
		<li><%= link_to "About #{@channel.channel_name}", about_channel_url(@channel), "data-icon"=>"custom", :id => "about" %> </li>
		<li data-role="list-divider" class="center-wrapper">Upcoming Events</li>
		<%= render :partial => 'mobile/event_list', :collection => @events, :as => :event %>	
  	</ul>
<% end %>

<%= render :partial => 'mobile/channel_footer', :locals => { :channel => @channel } %>
