<h2>Join. Stay Informed.</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 	<%= devise_error_messages! %>
 	<%= f.input :first_name, :required => true %>
 	<%= f.input :last_name, :required => true %>
    <%= f.input :birth_date, :as => :date, :start_year => Date.today.year - 90,
                                :end_year => Date.today.year - 12, 
                                :order => [:month, :day, :year], :required => true, :hint => "This helps find content for you." %>
 	<%= f.input :city, :collection => City.all, :label_method => :city, :value_method => :city, :prompt => "Choose a Nearby City", :required => true %>
    <%= f.input :email, :input_html => { :maxlength => 50 } %>
    <%= f.input :password, :input_html => { :minlength => 6 }, :hint => " Must be at least 6 characters." %>
    <%= f.input :password_confirmation, :input_html => { :within => 6..40 }, :label => 'Confirm Password' %>
    <%= f.button :submit, 'Sign Up' %> 
<% end %>

<%= render :partial => "devise/shared/links" %>
