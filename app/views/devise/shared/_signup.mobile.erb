  	<div id="mform">
    <%= form_for(resource, resource.with_host_profile, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
 		<%= devise_error_messages! %> 	
 			<table>
 				<%= render :partial =>'mobile/user_name_email', :locals=>{:f=>f} %>
 				<tr><td>Password</td><td><%= f.password_field :password %></td></tr>
 				<tr><td>Gender</td><td><%= f.select :gender, options_for_select( ['Male', 'Female'], :prompt => 'Select Gender' ) %></td></tr>
 				<tr><td>Birthdate</td><td>
    			  <div data-role="fieldcontain" class="fld-size">
					<fieldset data-role="controlgroup" data-type="horizontal">
    				<%= f.date_select :birth_date, {:as => :date, :start_year => Date.today.year - 13, :end_year => Date.today.year - 90, 
                                :order => [:month, :day, :year], :required => true, :prompt => true, :use_short_month => true}, 
                                {:class=>'pad-left', 'data-mini'=>'true'}  %>
        			</fieldset>
        		  </div>					
 				</td></tr>
 				<tr><td>City</td><td><%= f.collection_select :location_id, Location.all, :id, :city, {:prompt => 'Select Home City'} %></td></tr>
 				<tr><td>Promo Code</td><td><%= f.text_field :promo_code %></td></tr>
 			</table>		
		
 		<p><%= f.submit "Sign Up", "data-theme"=>"b" %></p>
 		<%= render :partial => "devise/shared/links" %>
  <% end %>
  </div>