var formError = getFormID('#stripe_error');
var pmtForm = getFormID('#pmtForm');

<% if @discount.blank? %>
    formError.text("Discount code not found. Please re-enter.");
	formError.show(300);
<% else %>
	formError.hide(300);
	pmtForm.html("<%= escape_javascript( raw render(:partial => 'payment_form') ) %>"); 
<% end %>

// toggle spinner
<% if mobile_device? %>
	uiLoading(false);
<% else %>
	$("#spinner").hide(300);
<% end %>

// scroll to top of page
$('html, body').animate({scrollTop:0}, 100);
