<% content_for :pre_mobile_load do %>
  	<%= render 'mobile/pre_load' %>
<% end %>

<% content_for :head do %>
	<%= link_to 'Home', root_path, "class"=>"ui-btn-left", "data-icon"=>"home", "data-iconpos"=>"notext" %>
<% end %>

<% content_for :content do %>
	<div class="mtop">
		<ul data-role="listview" data-dividertheme="a">
			<% get_date_range(@event).each do |edate| %>
				<li data-role="list-divider" data-theme="c" class="center-wrapper"><%= edate.strftime("%A, %B %e, %Y") %></li>
				<%= render :partial => 'mobile/session_list', :collection => get_sessions(@event.sessions, edate), 
							:as => :event %>	
			<% end %>
		</ul>	
	</div>
<% end %>





