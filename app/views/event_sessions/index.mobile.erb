<% content_for :pre_mobile_load do %>
  	<%= render 'mobile/pre_load' %>
<% end %>

<% content_for :head do %>
	<%= link_to 'Home', root_path, "class"=>"ui-btn-left", "data-icon"=>"home", "data-iconpos"=>"notext" %>
<% end %>

<% content_for :content do %>
	<div class="mtop">
		<ul data-role="listview" data-dividertheme="e" data-filter="true">
			<% get_date_range(@event).each do |edate| %>
		  		<%= render :partial => 'mobile/event_list_hdr', :locals => {:edate => edate } %> 
				<%= render :partial => 'mobile/session_list', :collection => list_events(@event.sessions, edate), :as => :event %>	
			<% end %>
		</ul>	
	</div>
<% end %>





