<div class="span-5 colborder event-label">  	<p><%= f.label "Where does it take place?" %></p>           </div>	<div class="span-18 last" id="new-event">  	<%= f.label :location %><%= f.text_field :location, :size => 40 %>	<div class="span-18 last">		<%= f.label :address %><%= f.text_field :address, :size => 40 %>	</div>	<div class="span-8">		<%= f.label :city %><%= f.text_field :city, :size => 25 %>	</div>	<div class="span-4">		State/Province <%= f.text_field :state, :size => 2 %>	</div>	<div class="span-6 last">		<%= f.label :postalcode %><%= f.text_field :postalcode, :size => 10 %>	</div>	<div class="span-18 last">		<%= f.label :country %><%= f.country_select :country, :prompt => true %>		<p><%= f.label :other_details %><%= f.text_field :other_details, :size => 60, :required => false %></p>	</div></div>
<hr />   