<div class="span-5 event-label">  	<p><%= f.label "Where does it take place?" %></p>           </div>	<div class="span-19 last" id="new-event">  	<%= f.label :location %><%= f.text_field :location, :size => 40 %>	<div class="span-19 last">		<%= f.label :address %><%= f.text_field :address, :size => 40 %>	</div>	<div class="span-8">		<%= f.label :city %><%= f.text_field :city, :size => 25 %>	</div>	<div class="span-6">		State/Prov <%= f.collection_select :state, StateCode.all, :StateAbbr, :State, :include_blank => true %>	</div>	<div class="span-5 last">		Postal <%= f.text_field :postalcode, :size => 10 %>	</div>	<div class="span-19 last">		<%= f.label :country %><%= f.country_select :country, ["United States"], :include_blank => true %>		<p><%= f.label :other_details %><%= f.text_field :other_details, :size => 60, :required => false %></p>	</div></div>
<hr />   