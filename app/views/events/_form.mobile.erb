  <%= form_for @event do |f| %>	<span>Event Title </span><br /><%= f.text_field :event_title, :size => 40 %>	<span>Frequency </span><br /><%= f.collection_select :reoccurrencetype, ReoccurrenceType.all, :code, :description, :prompt => 'Select' %>	<span>Event Type </span><br /><%= f.collection_select :event_type, EventType.all, :Code, :Description, :prompt => 'Select' %>	<span>Start Date </span><br /><%= f.text_field :eventstartdate, :value => get_nice_date(@event.eventstartdate, 'Edit'), :size => 10, :id => "start-date" %> 	<span>Start Time </span><br /><%= f.text_field :eventstarttime, :value => chk_offset(@event.eventstarttime, @event.localGMToffset), :id => "start-time", :size => 10 %> 	<span>Start Time Zone </span><br /><%= f.collection_select :localGMToffset, GMTTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)} %>	<span>End Date </span><br /><%= f.text_field :eventenddate, :value => get_nice_date(@event.eventenddate, 'Edit'), :size => 10, :id => "end-date" %> 	<span>End Time </span><br /><%= f.text_field :eventendtime, :value => chk_offset(@event.eventendtime, @event.endGMToffset), :id => "end-time", :size => 10 %> 	<span>End Time Zone </span><br /> <%= f.collection_select :endGMToffset, GMTTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)} %>	<span>Place </span><br /> <%= f.text_field :mapplacename, :size => 60 %>	<span>Street </span><br /> <%= f.text_field :mapstreet, :size => 60 %>	<span>City </span><br /> <%= f.text_field :mapcity, :size => 25 %>	<span>State </span><br /> <%= f.collection_select :mapstate, StateCode.all, :StateAbbr, :State, :prompt => 'Select' %>	<span>Zip </span><br /> <%= f.text_field :mapzip, :size => 10 %>	<span>Country </span><br /> <%= f.country_select :mapcountry, ["United States"] %>	<%= f.hidden_field :contentsourceID, :value => @user.id %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save Event", "data-theme"=>"b" %>  <% end %>