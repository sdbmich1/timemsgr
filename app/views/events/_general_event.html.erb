<div class="span-4"> 	<% if event.start_date == event.end_date %>		<% if event.start_date == Date.today %>			<%= "Today" %><br /> 		<% else %>			<%= " #{event.start_date.strftime("%D")}" %><br />		<% end %>	<% else %>    	<%= " #{event.start_date.strftime("%D")} - #{event.end_date.strftime("%D")}" %><br /> 	<% end %>
 	<%= " #{event.start_time.strftime("%l:%M %P")} - #{event.end_time.strftime("%l:%M %P")}" %>			</div>
<div class="span-2" id="new-event">	<%= image_tag event.photo.url(), :alt => "none", :size => "30x30" %></div>
<div class="span-10" id="new-event"> 	<%= link_to event.title, event %></div>
<div class="span-4"> 	<p><%= link_to 'Share', event %></p></div>
<div class="span-4 last"> 	Remind</div> 