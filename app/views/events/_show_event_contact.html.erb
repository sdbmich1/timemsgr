<% if !@event.contact_name.blank? %>	<div class="span-2"><%= "Contact:" %></div>	<div class="span-18 last"><span class="append-2"><%= @event.contact_name %></span></div><% end %>
<% if !@event.website.blank? %>	<div class="span-6"><span class="prepend-4"><%= "Website:" %></span></div>	<div class="span-18 last"><%= link_to "#{@event.website}", "http://#{@event.website}" %></div> <% end %>
<% if !@event.email.blank? %>	<div class="span-6"><span class="prepend-4"><%= "Email:" %></span></div>	<div class="span-18 last"><%= @event.email %></div> <% end %>
<% if !@event.phone.blank? %>	<div class="span-6"><span class="prepend-4"><%= "Phone:" %></span></div>	<div class="span-18 last"><%= @event.phone %></div> <% end %>