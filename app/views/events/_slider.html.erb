<div class="span-1 slider-nav">	<%= image_tag "#{nav_btn_img('left')}", :class => "#{set_slider_class(slider)[:lnav]}" %> </div><div class="span-22">	<span class="grphead"><%= "#{slider}" %></span><br />	<% if !(slider =~ /Opportunities/i).nil? %>		<div class="opp-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => get_opp_events, 				:as => :event, :locals => {:slider => slider } %></ul>		</div>	<% elsif !(slider =~ /Observances/i).nil? %>		<div class="obsrv-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => @events.select {|event| event.event_type == 'h' || event.event_type == 'm' },			  	:as => :event, :locals => {:slider => slider } %></ul>		</div>			<% else %>		<div class="sch-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => @events.select {|event| event.contentsourceID == @user.id.to_s},				:as => :event, :locals => {:slider => slider } %></ul>	    </div>			<% end %></div><div class="span-1 last">	<%= image_tag "#{nav_btn_img('right')}", :class => "#{set_slider_class(slider)[:rnav]} slider-nav" %></div>