<div class="span-1 slider-nav">	<%= image_tag "#{nav_btn_img('left')}", :class => "#{set_slider_class(slider)[:lnav]}" %> </div><div class="span-22">	<center><span class="grphead"><%= "#{slider}" %></span></center>	<% if !(slider =~ /Upcoming/i).nil? %>		<div class="opp-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => get_slider_events(slider), 				:as => :event, :locals => {:slider => slider } %></ul>		</div>	<% elsif !(slider =~ /Observances/i).nil? %>		<div class="obsrv-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => get_slider_events(slider),			  	:as => :event, :locals => {:slider => slider } %></ul>		</div>			<% else %>		<div class="sch-slider">			<ul class="eslide"><%= render :partial => 'event', :collection => get_slider_events(slider),				:as => :event, :locals => {:slider => slider } %></ul>	    </div>			<% end %></div><div class="span-1 last">	<%= image_tag "#{nav_btn_img('right')}", :class => "#{set_slider_class(slider)[:rnav]} slider-nav" %></div>