<div class="span-1"><span class="grphead"><%= "#{slider}" %></span></div><div class="span-2 slider-nav">	<%= image_tag "#{nav_btn_img('left')}", :class => "#{set_slider_class(slider)[:lnav]} adj-left" %> </div><div class="span-20">	<% if slider == "Opportunities"%>		<div class="opp-slider">			<ul class="eslide"><%= render @events %></ul>		</div>	<% elsif slider == "Observances" %>		<div class="obsrv-slider">			<ul class="eslide"><%= render :partial => 'event', :as => :event, :collection => @events.select(&:observance?) %></ul>		</div>			<% else %>		<div class="sch-slider">			<ul class="eslide"><%= render :partial => 'event', :as => :event, :collection => @events.select {|event| event.user_id == @user.id} %></ul>	    </div>			<% end %></div><div class="span-1 last">	<%= image_tag "#{nav_btn_img('right')}", :class => "#{set_slider_class(slider)[:rnav]} slider-nav" %></div>