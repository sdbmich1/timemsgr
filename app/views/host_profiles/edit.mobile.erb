<%= render :partial => 'mobile/index_form', :locals => {:title => 'Promo Code'} %>
<% content_for :subhead do %>
  <h3><%= "Welcome to #{get_name_or_logo}, #{@user.first_name}!" %></h3>	
<% end %>

<% content_for :content do %>
  	<%= form_for @host_profile do |f| %>
		<%= render "mobile/error_messages", :target => @host_profile %> 
		<p><h4>Please enter your optional promo code.</h4></p> 
		<p><%= f.text_field :promoCode %></p>
		<%= f.submit "Finish", "data-theme"=>"b" %>
		<%= link_to "Skip", :back, "data-role" => "button" %>
	<% end %>
<% end %>