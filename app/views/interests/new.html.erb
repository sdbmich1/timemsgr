<!-- -->
<% content_for :head do %>
  <%= render :partial => 'shared/main_menu', :locals => { :main_menu => "Register" } %>
<% end %>

<% content_for :subhead do %>
  <%= render :partial => 'shared/breadcrumb', :locals => { :breadcrumb => 1 } %>
<% end %>

<% content_for :content do %>
	<h3 class="strong">Select Your Interests</h3>
	Personalize your content by selecting the topics you are interested in being kept aware of.

	<%= form_for @interest do |f| %>
 		<div id="event_errors" style="display:none" class="error"></div>
		<%= render "shared/error_messages", :target => @interest %>  
		<%= render 'shared/categories' %>
		<br />
		<%= f.submit 'Continue >>', :class => "nav-right" %>
		<br />
  	<% end %>
<% end %>