<%= render :partial => 'mobile/index_form', :locals => {:title => 'Select Interests'} %>
<% content_for :subhead do %>
  <h3><%= "Welcome to #{get_name_or_logo}, #{@user.first_name}!" %></h3>	
<% end %>

<% content_for :content do %>
  <div data-role="collapsible-set">
	<%= form_for @interest do |f| %>
		<%= render :partial => 'category', :as => :category, :collection => @categories %><br />
		<%= f.submit "Continue >>", "data-theme"=>"b" %>
	<% end %>
  </div>
<% end %>
