<!DOCTYPE html>
<html>
  <head>  
  	<%= yield :title %> 
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', 'meter', :cache => true %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0"/>
	<meta name="apple-mobile-web-app-capable" content="yes" />

	<%= javascript_include_tag :defaults %>
	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.css" />
	<script src="http://code.jquery.com/jquery-1.6.4.min.js"></script>
	<script src="http://code.jquery.com/mobile/1.0.1/jquery.mobile-1.0.1.min.js"></script> 	
 	<script src="http://cubiq.org/dropbox/iscroll/iscroll.js?v3.7.1"></script>
 
    <%= stylesheet_link_tag "mobile", "calendar", "mobile_nohdr", :cache => true %>  
    <% if !user_signed_in? %>
    	<%= stylesheet_link_tag "mobile_device" %>
    <% end %>
  	<%= javascript_include_tag 'application.mobile.js','jquery.infieldlabel.min.js', "jquery.mobile.iscroll.js", :cache => true %>
  	<%= csrf_meta_tag %>  	
  </head>
  <body>  
  <div id="app" data-role="page" data-iscroll="enable"> 
    <div data-role="header" data-theme="b">
      <%= yield :head %>
    </div>
    
    <div id="banner_ad_top">
    	<div class="center-wrapper">
    		<%= yield :ad_content %>
    	</div>
    </div>
    <%= yield :subhead %>
    
	<div class="app-content" data-role="content">
 	   	<% unless notice.nil? %>
  	   		<p class="notice"><%= notice %></p>
  	   	<% end %>
       	<% unless alert.nil? %>
            <p class="alert"><%= alert %></p>     
       	<% end %>  	  
  		<%= yield :content %>
  
    	<div id="app-footer" data-role="footer">		
      		<%= yield :footer %>
    	</div>
   </div>   
     
  </body> 
</html>
