<!DOCTYPE html>
<html>
  <head>  
  	<%= yield :title %> 
	<%= render 'layouts/jqm' %>
 	<%= javascript_include_tag 'application.mobile.js','jquery.infieldlabel.min.js', "jquery.mobile.iscroll.js", :cache => true %>
    <%= stylesheet_link_tag "mobile", "calendar", :cache => true %>  
   	<%= stylesheet_link_tag "mobile_device"  unless user_signed_in? %>
  	<%= csrf_meta_tag %>  	
  </head>
  <body>  
  <div id="app" data-role="page" data-iscroll="enable"> 
    <div data-role="header" data-theme="b">
      <%= yield :head %>
    </div>
    
    <div id="banner_ad_top">
    	<div class="center-wrapper">
    		<%= yield :ad_content %>
    	</div>
    </div>
    <%= yield :subhead %>
    
	<div class="app-content" data-role="content">
 	   	<% unless notice.nil? %>
  	   		<p class="notice"><%= notice %></p>
  	   	<% end %>
       	<% unless alert.nil? %>
            <p class="alert"><%= alert %></p>     
       	<% end %>  	  
  		<%= yield :content %>
  
    	<div id="app-footer" data-role="footer">		
      		<%= yield :footer %>
    	</div>
   </div>   
     
  </body> 
</html>
