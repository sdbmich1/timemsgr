<!DOCTYPE html>
<html>
  <head>  
  	<%= yield :title %> 
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', 'jquery.ui.datepicker.mobile','meter', :cache => true %>
  	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0b2/jquery.mobile-1.0b2.min.css" />
  	<%= javascript_include_tag :defaults, :cache => true %>
  	
  	<script>
  		//reset type=date inputs to text
  		$( document ).bind( "mobileinit", function(){
    		$.mobile.page.prototype.options.degradeInputs.date = true;
  		});	
	</script>

 	<script src="http://code.jquery.com/jquery-1.6.2.min.js"></script>
 	<script src="http://code.jquery.com/mobile/1.0b2/jquery.mobile-1.0b2.min.js"></script>
  	<%= javascript_include_tag 'jQuery.ui.datepicker.js','jquery.ui.datepicker.mobile.js','jquery.progressbar.min.js', :cache => true %>

    <%= stylesheet_link_tag "screen", "mobile", "calendar", :cache => true %>  
  	<%= csrf_meta_tag %>  	
  </head>
  <body>  
  <div data-role="page"> 
    <div data-role="header">
  	  <h1><%= "#{get_name_or_logo}" %></h1>
      <%= yield :head %>
 
      <% if user_signed_in? %>
        <%= link_to 'Sign Out', destroy_user_session_path, "class" => "ui-btn-right" %>
      <% end %>
    </div>
    
    <% unless flash.empty? %>  
      <div class="info">  
        <% flash.each do |name, msg| -%>  
          <%= content_tag :div, msg, :id => "flash_#{name}" %>  
        <% end -%>  
      </div>  
    <% end %>  
    
	<div data-role="content">		
      <%= yield :content %>
    </div>

   </div>         
  </body> 
</html>
