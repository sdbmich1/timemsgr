<!DOCTYPE html>
<html>
  <head>  
  	<%= yield :title %> 
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', 'meter', :cache => true %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0"/>
	<meta name="apple-mobile-web-app-capable" content="yes" />

	<%= javascript_include_tag :defaults %>
	<script src="http://code.jquery.com/jquery-1.6.2.min.js"></script>
  	
   	<link rel="stylesheet" href="http://code.jquery.com/mobile/1.0rc1/jquery.mobile-1.0rc1.min.css" />
 	<script src="http://code.jquery.com/mobile/1.0rc1/jquery.mobile-1.0rc1.min.js"></script>
 	<script src="http://cubiq.org/dropbox/iscroll/iscroll.js?v3.7.1"></script>
 
	<%= yield :pre_mobile_load %>
    <%= stylesheet_link_tag "mobile", "calendar", "mobile_hdr", :cache => true %>  
  	<%= javascript_include_tag 'jquery.infieldlabel.min.js','jquery.progressbar.min.js', "jquery.mobile.iscroll.js", :cache => true %>
  	<%= csrf_meta_tag %>  	
  </head>
  <body>  
  <div id="app" data-role="page" data-iscroll="enable"> 
    <div data-role="header" data-theme="b">
      <%= yield :head %>
      <%= yield :srch_content %>
  </div>
    
    <div id="banner_ad_top">
    	<div class="center-wrapper">
    		<%= yield :ad_content %>
    	</div>
    </div>
    
	<div class="app-content" data-role="content">
	  <% if user_signed_in? %>
		<div data-iscroll="scroller" class="scroller">
	  <% else %>	
	  	<div>
	  <% end %>	
      		<%= yield :content %>
      	</div>
     </div>
    
    <div id="app-footer" data-role="footer">		
      <%= yield :footer %>
    </div>
   </div>   
     
  </body> 
</html>
