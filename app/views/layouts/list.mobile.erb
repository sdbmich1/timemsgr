<!DOCTYPE html>
<html>
  <head>  
  	<%= yield :title %> 
	<%= stylesheet_link_tag 'jquery-ui-1.8.11.custom', 'meter', :cache => true %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0"/>
	<meta name="apple-mobile-web-app-capable" content="yes" />

	<%= javascript_include_tag :defaults %>
	<%= render 'layouts/jqm' %>
 	<script src="http://cubiq.org/dropbox/iscroll/iscroll.js?v3.7.1"></script>
 
    <%= stylesheet_link_tag "mobile", "calendar", "mobile_hdr", :cache => true %>  
  	<%= javascript_include_tag 'application.mobile.js', 'jquery.infieldlabel.min.js', "jquery.mobile.iscroll.js", :cache => true %>
  	<%= csrf_meta_tag %>  	
  </head>
  <body>  
    <div id="app" data-role="page" data-iscroll="enable"> 
      <div data-role="header" data-theme="b">
      	<%= yield :head %>
      	<%= yield :srch_content %>
  	  </div>
    
      <div id="banner_ad_top">
    	<div class="center-wrapper">
    		<%= yield :ad_content %>
    	</div>
      </div>
    
	  <div class="app-content" data-role="content">
    	<%= yield :subhead %>
		<div data-iscroll="scroller" class="scroller">
      		<%= yield :content %>
      	</div>
      </div>
    
      <div id="app-footer" data-role="footer">		
      	<%= yield :footer %>
      </div>
    </div>  
  </body> 
</html>
