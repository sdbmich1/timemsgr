<%= content_for :footer do %>
	<div data-role="navbar">
	  <ul>
	  	<% if subscribed?(channel.channelID)%>
			<li><%= link_to "Unsubscribe", subscription_url(:user_id=>@user, :channel_id => @channel), "data-icon"=>"minus", "data-method" => "put" %> </li>
	  	<% else %>
			<li><%= link_to "Join", subscriptions_url(:user_id=>@user, :channel_id => @channel), "data-icon"=>"add", "data-method" => "post" %> </li>
	  	<% end %>
	  </ul>
	</div>
<% end %>
