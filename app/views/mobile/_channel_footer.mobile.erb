<%= content_for :footer do %>
	<div data-role="navbar">
	  <ul>
	  	<% if subscribed?(channel.channelID)%>
			<li><%= link_to "Unsubscribe", unsubscribe_subscription_url(:user_id=>@user, :channel_id => @channel.channelID), :confirm => 'Are you sure?', "data-icon"=>"minus", :remote=>true %> </li>
	  	<% else %>
			<li><%= link_to "Join", subscriptions_url(:user_id=>@user, :channel_id => @channel), "data-icon"=>"add", :method=>:post %> </li>
	  	<% end %>
	  </ul>
	</div>
<% end %>
