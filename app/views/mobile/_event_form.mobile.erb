<div class="mtop">  <%= form_for @event, :validate => true, :html => {:class=> "eform"} do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<p><label for="<%= "#{get_display_type(etype,'event_name')}" %>">Event Name</label><%= f.text_field :event_name, :size => 100, 'data-mini'=>"true" %></p>		<%= f.collection_select :event_type, get_etype_data(etype), :code, :descr_title, {:prompt => 'Select Event Type'}, {'data-mini'=>"true"} %>		<div class="ptop">		<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	</div>   	<div class="ptop nav-right">			<%= link_to "+ Add Reminder", '#', :id=>"rflg", :class => "sdescr" %>  	</div>  	<div class="clear-all"></div>	<div style="<%= !has_reminder?(@event) ? 'display:none' : '' %>" id="reminder-type">		<%= f.collection_select :remindertype, ReminderType.active, :code, :descr_title, {:prompt=>true}, {:id=> "remtype", 'data-mini'=>"true"} %>			</div>	<label for="<%= "#{get_display_type(etype,'cbody')}" %>">Description </label><%= f.text_area :cbody %>	   	<div class="nav-right">			<%= link_to "+ Add Location", '#', :id=>"loc", :class => "sdescr" %>  	</div>	<div class="clear-all"></div>	<div id="mform" class="ev-loc" style="display:none">		<p><%= render :partial => 'mobile/event_location', :locals => { :f => f, :etype => etype }%></p>	</div>	<% if chk_action(action_name, @event) %> 		<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%>	<% end %>	<% if action_name == 'new' %>	   	 	<%= f.hidden_field :contentsourceID, :value => @user.ssid %>    	<%= f.hidden_field :subscriptionsourceID, :value => @user.ssid %>    <% end %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>   	<%= f.hidden_field :remindflg, :id=>"remflg", :value => @event.remindflg %>
	<%= f.submit "Save", "data-theme"=>"b", 'data-mini'=>"true" %>	<%= link_to "Cancel", home_url, "data-role" => "button", 'data-mini'=>"true" %>  <% end %></div>