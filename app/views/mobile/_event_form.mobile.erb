<div class="mtop">  <%= form_for @event, :validate => true, :html => {:class=> "eform"} do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<p><label for="<%= "#{get_display_type(etype,'event_name')}" %>">Event Name</label><%= f.text_field :event_name, :size => 100, 'data-mini'=>"true" %></p>		<% if etype == 'event' %>		<%= f.collection_select :event_type, EventType.all, :code, :descr_title, {:prompt => 'Select Event Type'}, {'data-mini'=>"true"} %>	<% elsif etype == 'life' %>		<%= f.collection_select :event_type, LifeEventType.all, :Code, :descr_title, {:prompt => 'Select Event Type'}, {'data-mini'=>"true"} %>	<% else %>	<% end %>	<p><label for="<%= "#{get_display_type(etype,'cbody')}" %>">Description </label><%= f.text_area :cbody %></p> 	<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	   	<div class="nav-right">			<%= link_to "+ Add Location", '#', :id=>"loc", :class => "sdescr" %>  	</div>	<div class="clear-all"></div>	<div id="mform" class="ev-loc" style="display:none">		<p><%= render :partial => 'mobile/event_location', :locals => { :f => f, :etype => etype }%></p>	</div>	<% if chk_action(action_name, @event) %> 		<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%>	<% end %>	<% if action_name == 'new' %>	   	 	<%= f.hidden_field :contentsourceID, :value => @user.ssid %>    	<%= f.hidden_field :subscriptionsourceID, :value => @user.ssid %>    <% end %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save", "data-theme"=>"b", 'data-mini'=>"true" %>	<%= link_to "Cancel", home_url, "data-role" => "button", 'data-mini'=>"true" %>  <% end %></div>