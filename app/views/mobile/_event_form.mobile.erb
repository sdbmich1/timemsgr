<div class="mtop">  <%= form_for @event,  :html => {:class=> "eform"} do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<table>		<tr><td>Name</td><td><%= f.text_field :event_name, :size => 100 %></td></tr>		<tr><td>Event Type</td><td>			<%= f.collection_select :event_type, get_etype_data(etype), :code, :descr_title, {:prompt => 'Select'}, {:id=>'etype'} %>					</td></tr>			<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	 	<tr style="<%= !has_reminder?(@event) || is_past?(@event) ? 'display:none' : '' %>" id="reminder-type"><td>Reminder Type</td><td>			<%= f.collection_select :remindertype, ReminderType.active, :code, :descr_title, {:prompt=>true}, {:id=> "remtype"} %>		</td></tr>			<tr><td>Description</td><td><%= f.text_area :cbody %></td></tr>		<%= render :partial => 'mobile/event_location', :locals => { :f => f, :etype => etype }%>		<% if chk_action(action_name, @event) %> 			<%= render :partial => 'mobile/event_reoccur_date', :locals => { :f => f, :etype => etype }%>		<% end %>	</table>	<table>		<tr>   			<td style="<%= is_past?(@event) ? 'display:none' : '' %>" class="center-wrapper"><%= link_to reminderTitle, '#', :id=>"rflg", :class => "change-btn round fm-link" %></td>			<td class="nav-right"><%= link_to "+ Add Location", '#', :id=>"loc", :class => "change-btn round fm-link" %></td>		</tr>	</table>		<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%> 	<%= f.hidden_field :contentsourceID, :value => @user.ssid if data_form? %>    <%= f.hidden_field :subscriptionsourceID, :value => @user.ssid %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>   	<%= f.hidden_field :remindflg, :id=>"remflg", :value => @event.remindflg %>	<div class="mtop"></div>
	<%= f.submit "Save", "data-theme"=>"b" %>	<%= link_to "Cancel", :back, "data-role" => "button" %>  <% end %></div>
