  <%= form_for @event, :class=> "eform", :validate => true do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<label class="eform">Event Name </label><%= f.text_field :event_name, :size => 100 %>	<% if etype == 'event' %>		<label>Event Type </label><br /><%= f.collection_select :event_type, EventType.all, :code, :description, :prompt => 'Select' %>	<% else %>		<label>Event Type </label><%= f.collection_select :event_type, LifeEventType.all, :Code, :Description, :prompt => 'Select' %>	<% end %>	<label>Overview </label><%= f.text_field :bbody, :size => 255 %> 	<label>Description </label><%= f.text_area :cbody %> 	<label>Start Date </label><%= f.date_select :eventstartdate, :as => :date, 								:start_year => Date.today.year,                                :end_year => Date.today.year + 1,                                 :order => [:month, :day, :year], :required => true,                                 :prompt => true %> 	<label>Start Time </label><%= f.time_select :eventstarttime, :value => chk_offset(@event.eventstarttime, @event.localGMToffset), 				:id => "start-time", :size => 10, :html_options => {:class => "time-sel", "data-inline"=>"true"} %> 	<label>Start Time Zone </label><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)} %>	<label>End Date </label><%= f.date_select :eventenddate, :as => :date, 								:start_year => Date.today.year,                                :end_year => Date.today.year + 2,                                 :order => [:month, :day, :year], :required => true,                                 :prompt => true %>		<label>End Time </label><%= f.time_select :eventendtime, :value => chk_offset(@event.eventendtime, @event.endGMToffset), :id => "end-time", :size => 10 %> 	<label>End Time Zone </label> <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)} %>	<label>Place </label> <%= f.text_field :mapplacename, :size => 60 %>	<label>Street </label> <%= f.text_field :mapstreet, :size => 60 %>	<label>City </label> <%= f.text_field :mapcity, :size => 25 %>	<label>State </label> <%= f.collection_select :mapstate, StateCode.all, :StateAbbr, :State, :prompt => 'Select' %>	<label>Zip </label> <%= f.text_field :mapzip, :size => 10 %>	<label>Country </label> <%= f.country_select :mapcountry, ["United States"] %>	<div data-role="fieldcontain">       <fieldset data-role="controlgroup"> 		Frequency:		<% if etype == 'event' %>			<%= f.collection_select :reoccurrencetype, ReoccurrenceType.all, :code, :description, :prompt => 'Select' %>		<% else %>     		<%= f.check_box :annualsamedate, {:id => "freq"}, "yes", "no" %>			<label for="freq">Annual</label>		<% end %>      </fieldset>       <fieldset data-role="controlgroup"> 		Allow:     	<%= f.check_box :allowPrivCircle, {:id => "allowPriv"}, "yes", "no" %>		<label for="allowPriv">Private Sphere</label>     	<%= f.check_box :allowSocCircle, {:id => "allowSoc"}, "yes", "no" %>		<label for="allowSoc">Social Sphere</label>     	<%= f.check_box :allowWorldCircle, {:id => "allowWorld"}, "yes", "no" %>		<label for="allowWorld">World Sphere</label>      </fieldset>         <% if etype == 'life' %>         <fieldset data-role="controlgroup"> 			Show:     		<%= f.check_box :ShowPrivCircle, {:id => "showPriv"}, "yes", "no" %>			<label for="showPriv">Private Sphere</label>     		<%= f.check_box :ShowSocCircle, {:id => "showSoc"},  "yes",  "no" %>			<label for="showSoc">Social Sphere</label>     		<%= f.check_box :ShowWorldCircle, {:id => "showWorld"}, "yes", "no" %>			<label for="showWorld">World Sphere</label>        </fieldset>      <% end %>    </div> 	    <%= f.hidden_field :contentsourceID, :value => @host_profile.subscriptionsourceID %>    <%= f.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save Event", "data-theme"=>"b" %>  <% end %>