<div class="mtop">  <%= form_for @event, :class=> "eform", :validate => true do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<label class="eform">Event Name </label><%= f.text_field :event_name, :size => 100 %>	<% if etype == 'event' %>		<label>Event Type </label><br /><%= f.collection_select :event_type, EventType.all, :code, :descr_title, :prompt => 'Select' %>	<% else %>		<label>Event Type </label><%= f.collection_select :event_type, LifeEventType.all, :Code, :descr_title, :prompt => 'Select' %>	<% end %>	<label>Overview </label><%= f.text_field :bbody, :size => 255 %> 	<label>Description </label><%= f.text_area :cbody %> 	<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	<div id="event-loc">		<%= render :partial => 'mobile/event_location', :locals => { :f => f }%>	</div>	<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%>    <%= f.hidden_field :contentsourceID, :value => @host_profile.subscriptionsourceID %>    <%= f.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save", "data-theme"=>"b" %>  <% end %></div>