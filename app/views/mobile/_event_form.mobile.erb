<script>  $(function() {    $("#loc").live('click',function() {    $(this).text($(this).text() == 'Add Location' ? $('.ev-loc').show('fast') : $('.ev-loc').hide('fast') );    $(this).text($(this).text() == 'Add Location' ? 'Hide Location' : 'Add Location');  });     });</script><%= render "mobile/infield_form_labels" %><div class="mtop">  <%= form_for @event, :class=> "eform", :validate => true do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<p><label for="private_event_event_name">Event Name</label>	<%= f.text_field :event_name, :size => 100 %></p>	<% if etype == 'event' %>		<%= f.collection_select :event_type, EventType.all, :code, :descr_title, :prompt => 'Select Event Type' %>	<% elsif etype == 'life' %>		<%= f.collection_select :event_type, LifeEventType.all, :Code, :descr_title, :prompt => 'Select Event Type' %>	<% else %>	<% end %>	<p><label for="private_event_bbody">Summary</label>	<%= f.text_field :bbody, :size => 255 %></p> 	<p><label for="private_event_cbody">Description </label>	<%= f.text_area :cbody %></p><br /> 	<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	   	<div class="nav-right">			<%= link_to "Add Location", '#', :id=>"loc", :class => "sdescr" %>  	</div>	<div class="clear-all"></div>	<div id="mform" class="ev-loc" style="display:none">		<p><%= render :partial => 'mobile/event_location', :locals => { :f => f }%></p>	</div>	<% if chk_action(action_name, @event) %> 		<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%>	<% end %>	<% if action_name == 'new '%>	   	 	<%= f.hidden_field :contentsourceID, :value => @host_profile.subscriptionsourceID %>    	<%= f.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>    <% end %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save", "data-theme"=>"b" %>	<%= link_to "Cancel", home_url, "data-role" => "button" %>  <% end %></div>