<%= render "mobile/infield_form_labels" %><div class="mtop">  <%= form_for @event, :class=> "eform", :validate => true do |f| %>	<%= render "mobile/error_messages", :target => @event %>  	<div id="mform">	<p><label for="private_event_event_name">Event Name</label>	<%= f.text_field :event_name, :size => 100 %></p>	<% if etype == 'event' %>		<%= f.collection_select :event_type, EventType.all, :code, :descr_title, :prompt => 'Select Event Type' %>	<% else %>		<%= f.collection_select :event_type, LifeEventType.all, :Code, :descr_title, :prompt => 'Select Event Type' %>	<% end %>	<p><label for="private_event_bbody">Summary</label>	<%= f.text_field :bbody, :size => 255 %></p> 	<p><label for="private_event_cbody">Description </label>	<%= f.text_area :cbody %></p> 	</div>	<%= render :partial => 'mobile/event_times', :locals => { :f => f }%>	<div id="mform" class="ev-loc" style="display:none">		<%= render :partial => 'mobile/event_location', :locals => { :f => f }%>	</div>	<%= render :partial => 'mobile/event_form_notify', :locals => { :f => f, :etype => etype }%>    <%= f.hidden_field :contentsourceID, :value => @host_profile.subscriptionsourceID %>    <%= f.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save", "data-theme"=>"b" %>  <% end %></div>