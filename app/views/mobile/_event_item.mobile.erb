	<div class="calendar">
	  <% if privlist == 'Yes'%>
   		<span class="month"><%= event.eventstartdate.strftime("%b") %></span>
    	<span class="day"><%= event.eventstartdate.strftime("%e") %></span>
	  <% else %>
   		<span class="month"><%= show_date(event.eventstartdate, edate).strftime("%b") %></span>
    	<span class="day"><%= show_date(event.eventstartdate, edate).strftime("%e") %></span>
	  <% end %>
	</div>
	<div class="stime">
		<%= " #{chk_offset(event.eventstarttime, event.localGMToffset, event.eventid)} " if event.eventstarttime %>
		<%= " - #{chk_offset(event.eventendtime, event.endGMToffset, event.eventid)}" if event.eventendtime %>
		<%= "TBD" unless event.eventstarttime || event.eventendtime %>
	</div>

 	<div class="slider-title">
		<h6><%= event.listing %></h6>
	</div>
	<div class="sl-descr">
		<div class="ui-li-desc sdescr"><%= event.summary %></div>
	</div>