	<div class="calendar">
	  <% if privlist == 'Yes'%>
   		<span class="month"><%= event.eventstartdate.strftime("%b") %></span>
    	<span class="day"><%= event.eventstartdate.strftime("%e") %></span>
	  <% else %>
   		<span class="month"><%= show_date(event.eventstartdate, edate).strftime("%b") %></span>
    	<span class="day"><%= show_date(event.eventstartdate, edate).strftime("%e") %></span>
	  <% end %>
	</div>
	<div class="stime"><%= chk_offset(event.eventstarttime, event.localGMToffset) %> - <%= chk_offset(event.eventendtime, event.endGMToffset) %></div>
 	<div class="slider-title">
		<h6><%= event.event_name %></h6>
	</div>
	<div class="sl-descr">
		<div class="ui-li-desc sdescr"><%= truncate(event.bbody.html_safe, :length=>70, :omission=>'...') %></div>
	</div>