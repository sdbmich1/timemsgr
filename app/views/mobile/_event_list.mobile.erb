<li>
  <% unless major_event?(event.event_type) %>
    <%= link_to major_event_url(event) do %>
	  	<%= render :partial => 'mobile/event', :locals => { :event => event } %>
    <% end %>  
  <% else %>
    <%= link_to event_url(event) do %>
	  	<%= render :partial => 'mobile/event', :locals => { :event => event  } %>
    <% end %>
  <% end %>
</li>
