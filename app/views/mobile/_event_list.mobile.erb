<li>
  <% if major_event?(event.event_type) %>
    <%= link_to major_event_url(event, :etype=>event.event_type, :eid=>event.eventid, :sdt=>event.eventstartdate) do %>
	  	<%= render :partial => 'mobile/event', :locals => { :event => event, :edate => event.start_date > Date.today ? event.start_date : Date.today } %>
    <% end %>  
  <% else %>
    <%= link_to event_url(event, :etype=>event.event_type, :eid=>event.eventid, :sdt=>event.eventstartdate) do %>
	  	<%= render :partial => 'mobile/event', :locals => { :event => event, :edate => event.start_date  } %>
    <% end %>
  <% end %>
</li>
