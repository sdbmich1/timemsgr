    <fieldset data-role="controlgroup"> 
     	<%= f.check_box :allday, {:id => "allday"}, "yes", "no" %>
		<label for="allday">All Day</label>
    </fieldset> 
	<label>Start Date </label><%= f.date_select :eventstartdate, :as => :date, 
								:start_year => Date.today.year,
                                :end_year => Date.today.year + 1, 
                                :order => [:month, :day, :year], :required => true, 
                                :prompt => true %>
 
    <label>Start Time: </label> <%= f.time_select :eventstarttime,{ :default => Time.now.change(:hour => 12), :simple_time_select => true, 
    							:minute_interval => 5, :time_separator => "" }, :value => chk_offset(@event.eventstarttime, @event.localGMToffset) %>
	<label>Start Time Zone </label><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)} %>
	<label>End Date </label><%= f.date_select :eventenddate, :as => :date, 
								:start_year => Date.today.year,
                                :end_year => Date.today.year + 2, 
                                :order => [:month, :day, :year], :required => true, 
                                :prompt => true %>
    <label>End Time: </label> <%= f.time_select :eventendtime,{ :default => Time.now.change(:hour => 12), :simple_time_select => true, 
    							:minute_interval => 5, :time_separator => "" }, :value => chk_offset(@event.eventendtime, @event.endGMToffset) %>	
	<label>End Time Zone </label> <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)} %>
