<div data-role="fieldcontain">
	<label for='start-dt'>Start Date:</label>
	<%= f.text_field :eventstartdate, {:value => get_nice_date(@event.eventstartdate, 'Edit'), :size=>15, :type => 'date', :id=>'start-dt', 'data-mini'=>"true", 'data-role'=>"datebox", 
		'data-options'=>'{"mode": "calbox", "dateFormat": "mm/dd/YYYY", "minDays": 0, "closeCallback":"dooffset();"}'} %>
  <div id="stime">  	                             
	<label for='start-tm'>Start Time:</label>
	<%= f.text_field :eventstarttime, {:value => get_nice_time(@event.eventstarttime), :size=>15, :id=>'start-tm', 'data-mini'=>"true", 'data-role'=>"datebox", 
		'data-options'=>'{"mode": "timebox", "timeFormat": "12"}'} %>
	<label>Start Time Zone: </label><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)}, {'data-mini'=>"true"} %>
  </div>
</div>

<div class="ptop" id='enddt'>
  <div data-role="fieldcontain">	
	<label for='end-dt'>End Date:</label>
	<%= f.text_field :eventenddate, {:value => get_nice_date(@event.eventenddate, 'Edit'), :size=>15, :type => 'date', :id=>'end-dt', 'data-mini'=>"true", 'data-role'=>"datebox", 
		'data-options'=>'{"mode": "calbox", "dateFormat": "mm/dd/YYYY", "minDays": 0}'} %>

	<label for='end-tm'>End Time:</label>
	<%= f.text_field :eventendtime, {:value => get_nice_time(@event.eventendtime), :size=>15, :id=>'end-tm', 'data-mini'=>"true", 'data-role'=>"datebox", 
		'data-options'=>'{"mode": "timebox", "timeFormat": "12"}'} %>
  	<label>End Time Zone: </label> <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)}, {'data-mini'=>"true"} %>
  </div>
</div>
