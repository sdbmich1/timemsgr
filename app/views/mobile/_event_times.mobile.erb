    <fieldset data-role="controlgroup"> 
     	<%= f.check_box :allday, {:id => "allday"}, "yes", "no" %>
		<label for="allday">All Day</label>
    </fieldset> 
	<span>Start Date </span><%= f.date_select :eventstartdate, :as => :date, 
								:start_year => Date.today.year,
                                :end_year => Date.today.year + 1, 
                                :order => [:month, :day, :year], :required => true, 
                                :prompt => true %>
 
    <span>Start Time: </span> <%= f.time_select :eventstarttime,{ :default => Time.now.change(:hour => 12), :simple_time_select => true, 
    							:minute_interval => 5, :time_separator => "" }, :value => chk_offset(@event.eventstarttime, @event.localGMToffset) %>
	<span>Start Time Zone </span><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)} %>
	<span>End Date </span><%= f.date_select :eventenddate, :as => :date, 
								:start_year => Date.today.year,
                                :end_year => Date.today.year + 2, 
                                :order => [:month, :day, :year], :required => true, 
                                :prompt => true %>
    <span>End Time: </span> <%= f.time_select :eventendtime,{ :default => Time.now.change(:hour => 12), :simple_time_select => true, 
    							:minute_interval => 5, :time_separator => "" }, :value => chk_offset(@event.eventendtime, @event.endGMToffset) %>	
	<span>End Time Zone </span> <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)} %>
