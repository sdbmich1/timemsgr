<%= render :partial => 'mobile/index_form', :locals => {:title => 'Manage Account'} %>

<% content_for :content do %>
	<div class="mtop center-wrapper">	<p><%= render :partial => 'mobile/show_photo', :locals => {:model=>@user.profile, :vtype=>"ppic",:file_name => 'headshot2.jpg', :psize => '80x80' }%>
		<h3><%= @user.name %></h3></p><br />
	</div>	<ul data-role="listview" data-dividertheme="a" data-mini="true">		<li data-role="list-divider" data-mini="true">Add</li>
