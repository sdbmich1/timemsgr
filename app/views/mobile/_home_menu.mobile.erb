		<li><%= link_to "Add Life Event", new_life_event_url %> </li>
		<li><%= link_to "Add Subscription", categories_url %> </li>
		<li data-role="list-divider" data-mini="true">Manage</li>
		<li><%= link_to "My Activities", private_events_url %></li>		<li><%= link_to "My Affiliations", edit_affiliation_path(@user, {:p => "Affiliations"}) %></li>
		<li><%= link_to "My Connections", relationships_url(:id=>@user) %> </li>
		<li><%= link_to "My Interests", edit_interest_path(@user, {:p => "Interests"}) %> </li>
		<li><%= link_to "My Subscriptions", subscriptions_url(:id=>@user) %> </li>
	</ul><% end -%>

