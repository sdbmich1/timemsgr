<% content_for :pre_mobile_load do %>
  	<%= render 'mobile/pre_load' %>
<% end %>
<% content_for :head do %>	<h3><%= "#{title}" %>
	<% if controller_name == 'events' && action_name == 'index' %>
		<%= link_to get_unread_count(@user), event_notices_url(:sid=>@user.ssid), :class=>"notice_id notice-btn round" %>
	<% end %></h3>	<%= link_to 'Home', events_url, "class"=>"ui-btn-left", "data-icon"=>"home", "data-iconpos"=>"notext" %>
	<% if user_signed_in? %>
		<% unless title == 'Manage Account' %>
       		<%= link_to 'Account', home_user_path, "class" => "ui-btn-right", "data-icon"=>"gear", "data-iconpos"=>"notext" %>
		<% else %>
			<%= link_to "Sign Out", destroy_user_session_path, "class" => "ui-btn-right" %>
		<% end %>
	<% end %>
<% end %>