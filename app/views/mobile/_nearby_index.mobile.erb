<%= render :partial => 'mobile/index_form', :locals => {:title => "Nearby Events"} %>

<%= content_for :subhead do %>
	<div class="evsearch" style="display:none">
		<%= render :partial => 'mobile/nearby_search' %>
	</div>
	<%= render :partial => 'mobile/locations' %>
<% end %>

<%= content_for :content do %>
  <div class='nearby-pg'>
    <ul data-role="listview">
		<%= render :partial => 'mobile/event_list', :collection => build_list(@nearby_events, Date.today+7.days), :as => :event, :locals => {:edate => Date.today} %>
    </ul>
  </div>
<% end -%>

<%= content_for :footer do %>
	<%= render :partial => 'mobile/page_footer', :locals => {:sflg => true} %> 
<% end %>
