<%= render :partial => 'mobile/infield_form_labels' %><%= form_for @notification, :url => notifications_path(:id=>@event, :etype=>@event.event_type, :sdate=>@event.eventstartdate, :eid=>@event.eventid), :id => 'notify_form', :validate => true do |f| %> 	<label>Notice Type:</label>	<%= f.collection_select "Notice_Type", NoticeType.active, :code, :code_title, {:prompt => 'Select'}, {'data-mini'=>'true'} %>	<% ['eventid', 'eventstartdate', 'eventstarttime', 'eventenddate' ,'eventendtime', 'contentsourceID', 'event_type', 'event_name'].each do |fld| %>        <%= f.hidden_field fld, :value => @event.send(fld) %>    <% end %><br />       	<label>Notify Connections:</label>    <fieldset data-role="controlgroup" 'data-mini'='true'> 		     	<%= f.check_box :allowPrivCircle, {:id => "allowPriv"}, "yes", "no" %>		<label for="allowPriv">My Family</label>     	<%= f.check_box :allowSocCircle, {:id => "allowSoc"}, "yes", "no" %>		<label for="allowSoc">My Friends</label>     	<%= f.check_box :allowWorldCircle, {:id => "allowWorld"}, "yes", "no" %>		<label for="allowWorld">My World</label>    </fieldset> <br />	<%= render :partial => 'mobile/share_fb_user', :locals {:f => f} %>     		    <label>Additional Recipients:</label>	<div id="mform">		<% (1..5).each do |i| %>      		<p><label for="<%='notification_email'+ i.to_s + 'address' %>"><%= 'Email' + i.to_s + 'Address' %></label>      		<%= f.text_field 'email' + i.to_s + 'address', :size => 60, 'data-mini'=>'true' %></p>    	<% end %>	<br />	</div>	    <%= f.hidden_field :event_id, :value => @event.ID %>    <%= f.hidden_field :location, :value => @event.location_details %>    <%= f.submit "Send", "data-theme"=>"b" %>	<p><%= link_to "Cancel", :back, "data-role" => "button" %></p><% end %>