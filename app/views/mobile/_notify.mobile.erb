<%= form_for @notification, :url => notifications_path(:id=>@event, :etype=>@event.event_type, :sdate=>@event.eventstartdate), :id => 'notify_form', :validate => true do |f| %> 	<strong>Notify Connections:</strong><br />    <fieldset data-role="controlgroup"> 		     	<%= f.check_box :allowPrivCircle, {:id => "allowPriv"}, "yes", "no" %>		<label for="allowPriv">My Family</label>     	<%= f.check_box :allowSocCircle, {:id => "allowSoc"}, "yes", "no" %>		<label for="allowSoc">My Friends</label>     	<%= f.check_box :allowWorldCircle, {:id => "allowWorld"}, "yes", "no" %>		<label for="allowWorld">My World</label>    </fieldset> 	<strong>Additional Recipients:</strong>	<p>	<% (1..5).each do |i| %>      <p><span><%= 'Email' + i.to_s %></span>      <%= f.text_field 'email' + i.to_s + 'address', :size => 60 %></p>    <% end %>    </p><br />	<strong>Notice Type:</strong>	<p><%= f.collection_select "Notice_Type", NoticeType.all, :code, :code_title, :prompt => 'Select' %></p>	<% ['eventid', 'eventstartdate', 'eventstarttime', 'eventenddate' ,'eventendtime', 'contentsourceID', 'event_type', 'event_name'].each do |fld| %>        <%= f.hidden_field fld, :value => @event.send(fld) %>    <% end %>    <%= f.hidden_field :event_id, :value => @event.ID %>    <%= f.hidden_field :location, :value => set_location(@event) %>    <%= f.submit "Send", "data-theme"=>"b" %>	<%= link_to "Cancel", home_url, "data-role" => "button" %><% end %></div>