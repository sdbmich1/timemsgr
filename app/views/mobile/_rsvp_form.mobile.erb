<div class="mtop">  <%= form_for @rsvp, :class=> "eform", :validate => true do |f| %>	<%= render "mobile/error_messages", :target => @rsvp %>  	<p>Guests<br /><%= f.select :guests, options_for_select( [0, 1, 2, 3, 4] ), :prompt => 'Select' %></p>	<label class="eform">Guest Names </label><%= f.text_field :guest1name, :size => 100 %>	<%= f.text_field :guest2name, :size => 100 %>	<%= f.text_field :guest3name, :size => 100 %>	<%= f.text_field :guest4name, :size => 100 %><br />	<label>Comment </label><%= f.text_field :comment, :size => 100 %>     <%= f.hidden_field :EventID, :value => @event.eventid %>    <%= f.hidden_field :inviteeid, :value => @host_profile.ProfileID %>    <%= f.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>    <%= f.hidden_field :fullname, :value => @host_profile.HostName %>
	<%= f.submit "Save", "data-theme"=>"b" %>  <% end %></div>