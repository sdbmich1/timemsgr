<%= render "mobile/infield_form_labels" %><div id="show-item">  <%= render :partial => 'mobile/show_event_details', :locals => {:event => @event} %></div><div id="mform" class="mtop">  <%= form_for @rsvp, :url => rsvps_path(@rsvp, :eid=>@event.id, :etype=>@event.event_type), :validate => true do |form| %>	<%= render "mobile/error_messages", :target => @rsvp %>  		<p><%= form.select :status, options_for_select( ['Attending', 'Not Attending', 'Might Attend'] ) %></p>		<p><%= form.select :guests, options_for_select( [0, 1, 2, 3, 4, 5] ), :prompt => 'Select # of Guests' %></p>		<p><label for="rsvp_guest1name">Guest 1 Name</label>		<%= form.text_field :guest1name %></p>		<p><label for="rsvp_guest2name">Guest 2 Name</label>		<%= form.text_field :guest2name %></p>		<p><label for="rsvp_guest3name">Guest 3 Name</label>		<%= form.text_field :guest3name %></p>		<p><label for="rsvp_guest4name">Guest 4 Name</label>		<%= form.text_field :guest4name %></p>		<p><label for="rsvp_guest5name">Guest 5 Name</label>		<%= form.text_field :guest5name %></p>		<p><label for="rsvp_comment">Comment</label>		<%= form.text_field :comment %></p>    	<%= form.hidden_field :EventID, :value => @event.eventid %>    	<%= form.hidden_field :inviteeid, :value => @host_profile.ProfileID %>    	<%= form.hidden_field :inviteesourceID, :value => @host_profile.subscriptionsourceID %>    	<%= form.hidden_field :invitersourceID, :value => @event.contentsourceID %>    	<%= form.hidden_field :subscriptionsourceID, :value => @host_profile.subscriptionsourceID %>    	<%= form.hidden_field :fullname, :value => @host_profile.HostName %>    	<%= form.hidden_field :email, :value => @user.email %>
	<%= form.submit "Submit", "data-theme"=>"b" %>	<%= button_to "Cancel", @event %>  <% end %></div>