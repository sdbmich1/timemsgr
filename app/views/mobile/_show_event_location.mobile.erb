<p><label><%= 'Where:' %></label> <% unless event.location.blank? %>	<span class="item-detail"><%= event.location %></span><br /><% end %><% unless event.mapplacename.blank? %>	<span class="item-detail"><%= event.mapplacename %></span><br /><% end %><% unless event.mapstreet.blank? %>	<p><span class="item-detail"><%= event.mapstreet %></span></p><br /><% end %>
<% unless event.mapcity.blank? %>	<span class="item-detail"><%= "#{event.mapcity}, #{event.mapstate} #{event.mapzip}  " %></span><br /><% end %></p>