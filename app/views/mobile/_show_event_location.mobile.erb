<label><%= 'Where:' %></label> <% unless event.location.blank? %>	<span class="item-detail"><%= event.location %></span><br /><% end %><span class="item-detail"><%= event.mapplacename %></span><br /><span class="<%= !event.mapplacename.blank? ? 'item-detail' : 'none' %>"><%= event.mapstreet %></span><br />
<% unless event.mapcity.blank? %>	<span class="item-detail"><%= "#{event.mapcity}, #{event.mapstate} #{event.mapzip}  " %></span><br /><% end %>
<% unless event.cbody.blank? %>	<label><%= 'Details:' %></label>	<span class="item-detail"><%= event.cbody.html_safe %></span><br /><% end %>