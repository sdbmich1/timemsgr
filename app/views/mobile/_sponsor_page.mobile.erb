
<%= content_for :head do %>
<% end %>

<%= content_for :content do %>
  <div id="sponsor-pg">
  	<div class="nav-right">	
		<p><%= link_to "Close", '#', :id=>"close-btn", :class=>"close-lnk" %></p>
  	</div>
  	<div class="clear-all"></div>
  	<div class="center-wrapper">
	<h3>Event Sponsors</h3>
	<% @sponsor_pages.each do |sp| %>
		<div class="sponsor-msg"><%= sp.message %></div><br />
			<% sp.sponsors.group(:sponsor_type).count.each do |sptype| %>
				<p class="sponsor-type"><%= sptype[0] %></p>
				<% sp.sponsors.select {|x| x.sponsor_type == sptype[0]}.each do |sponsor| %>
				  <% for pic in sponsor.pictures %>
        				<%= link_to image_tag(pic.photo.url, :size=>"#{get_logo_size(sponsor.logo_type)}"), sponsor.sponsorURL %>
        		  <% end %>  
        		<% end %>  
        	<% end %>     			
	<% end %>
	</div>
  </div>
  <div class="clear-all"></div>

<% end %>
