<ul data-role="listview" data-filter="true">
  <% @subscriptions.each do |sub| %>
	<% unless sub.local_channel.blank? %>
		<%= render :partial => 'mobile/channel', :locals => {:channel => sub.local_channel }%>
	<% end %>
  <% end %>
  <% if @subscriptions.count == 0 %>
		<div class="stitle center-wrapper"><h6><%= 'No subscriptions found.' %></h6></div>
  <% end %>
</ul>