<p><label>First Name </label><%= f.text_field :first_name, 'data-mini'=>'true' %></p><p><label>Last Name </label><%= f.text_field :last_name, 'data-mini'=>'true' %></p><p><label>Email </label><%= f.text_field :email, 'data-mini'=>'true' %></p><p><label>Gender </label><%= f.select :gender, options_for_select( ['Male', 'Female'] ), {}, {'data-mini'=>'true'} %></p><p><label>Birth Date </label><%= f.date_select :birth_date, {:as => :date, :start_year => Date.today.year - 90,               :end_year => Date.today.year - 12, :order => [:month, :day, :year]}, {'data-mini'=>'true' } %></p><p><label>Nearest City </label><%= f.collection_select :location_id, Location.all, :id, :city, {:prompt => false}, {'data-mini'=>'true'} %></p>	