<%= render :partial => 'mobile/index_form', :locals => {:title => "Nearby Events"} %>

<% content_for :srch_content do %>
	<%= render :partial => 'mobile/event_search' %>
<% end %>

<% content_for :subhead do %>
	<%= render :partial => 'mobile/locations' %>
<% end %>

<%= content_for :content do %>
  <ul data-role="listview">
	<% (Date.today..Date.today+7.days).each do |edate| %>
		<%= render :partial => 'mobile/event_list', :collection => parse_list(@nearby_events, edate), :as => :event, :locals => {:edate => edate} %>
	<% end %>	
  </ul>
<% end -%>
