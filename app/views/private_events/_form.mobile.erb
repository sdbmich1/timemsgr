  <%= form_for @event, :validate => true do |f| %>  	<%= render "shared/error_messages", :target => @event %>   	<span>Event Name </span><br /><%= f.text_field :event_name, :size => 40 %>	<span>Frequency </span><br /><%= f.collection_select :reoccurrencetype, ReoccurrenceType.all, :code, :description, :prompt => 'Select' %>	<span>Event Type </span><br /><%= f.collection_select :event_type, EventType.all, :code, :description, :prompt => 'Select' %>	<label>Overview </label><%= f.text_field :bbody, :size => 60 %> 	<label>Description </label><%= f.text_area :cbody %> 	<span>Start Date </span><br /><%= f.date_select :eventstartdate, :as => :date, 								:start_year => Date.today.year,                                :end_year => Date.today.year + 2,                                 :order => [:month, :day, :year], :required => true,                                 :prompt => true %>	<span>Start Time </span><br /><%= f.time_select :eventstarttime, :value => chk_offset(@event.eventstarttime, @event.localGMToffset), :id => "start-time", :size => 10 %> 	<span>Start Time Zone </span><br /><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.localGMToffset)} %>	<span>End Date </span><br /><%= f.date_select :eventenddate, :as => :date, 								:start_year => Date.today.year,                                :end_year => Date.today.year + 2,                                 :order => [:month, :day, :year], :required => true,                                 :prompt => true %>	<span>End Time </span><br /><%= f.time_select :eventendtime, :value => chk_offset(@event.eventendtime, @event.endGMToffset), :id => "end-time", :size => 10 %> 	<span>End Time Zone </span><br /> <%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => set_offset(@event.endGMToffset)} %>	<span>Place </span><br /> <%= f.text_field :mapplacename, :size => 60 %>	<span>Street </span><br /> <%= f.text_field :mapstreet, :size => 60 %>	<span>City </span><br /> <%= f.text_field :mapcity, :size => 25 %>	<span>State </span><br /> <%= f.collection_select :mapstate, StateCode.all, :StateAbbr, :State, :prompt => 'Select' %>	<span>Zip </span><br /> <%= f.text_field :mapzip, :size => 10 %>	<span>Country </span><br /> <%= f.country_select :mapcountry, ["United States"] %>	<%= f.hidden_field :contentsourceID, :value => @user.id %>	<%= f.hidden_field :LastModifyBy, :value => @user.last_name + ', ' + @user.first_name %>
	<%= f.submit "Save Event", "data-theme"=>"b" %>  <% end %>