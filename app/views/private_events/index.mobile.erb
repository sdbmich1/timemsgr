<%= render :partial => 'mobile/index_form', :locals => {:title => 'My Activities'} %>

<% content_for :srch_content do %>
	<%= render :partial => 'mobile/private_event_search' %>
<% end %>

<%= content_for :content do %>
  <div data-role="collapsible-set" data-mini="true">
   	<div data-role="collapsible" data-collapsed="false">
		<h3><%= "Upcoming Activities" %></h3>
		<ul data-role="listview"><%= render :partial => 'mobile/event_items', :collection => get_current_events, :as => :event %></ul>
	</div>	 	
	<div data-role="collapsible" >
		<h3><%= "Past Activities" %></h3>
		<ul data-role="listview"><%= render :partial => 'mobile/event_items', :collection => get_past_events, :as => :event %></ul>
	</div>		  	
  </div>
<% end -%>
