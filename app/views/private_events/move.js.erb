<% unless mobile_device? %>
  <% if @event.errors.any? -%>
	$("#event_errors").html("<%= escape_javascript(error_messages_for(@event))%>");
	$("#event_errors").show(300);
  <% else %>
	<%= set_form_type("event_slider") %>
	$("#event_errors").hide(300);
  	$("#flash_notice").html("<%= escape_javascript(flash[:notice])%>");
	$("#sch-slider").html("<%= escape_javascript( raw render("schedule") ).html_safe %>");
  <% end %>
<% end %>
$("#spinner").hide(300);
