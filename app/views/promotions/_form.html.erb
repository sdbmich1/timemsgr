<%= form_for @promotion do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :promo_type %><br />
    <%= f.text_field :promo_type %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.label :start_time %><br />
    <%= f.time_select :start_time %>
  </p>
  <p>
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </p>
  <p>
    <%= f.label :end_time %><br />
    <%= f.time_select :end_time %>
  </p>
  <p>
    <%= f.label :sponsor_id %><br />
    <%= f.text_field :sponsor_id %>
  </p>
  <p>
    <%= f.label :promo_fee %><br />
    <%= f.text_field :promo_fee %>
  </p>
  <p>
    <%= f.label :promo_descr %><br />
    <%= f.text_area :promo_descr %>
  </p>
  <p><%= f.submit %></p>
<% end %>
