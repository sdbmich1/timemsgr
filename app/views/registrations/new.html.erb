<%= render :partial => 'shared/menu_head', :locals => { :menu_type => 'Sign Up' } %>

<% content_for :content do -%>
  <%= render "devise/shared/links" %>
  <h3><strong>Keep Informed.</strong></h3>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :validate => true) do |f| %>
 	<%= devise_error_messages! %>
 	<div id="newreg">
 		<p><span>First Name</span> <%= f.text_field :first_name %></p> 
 		<p><span>Last Name</span>  <%= f.text_field :last_name %></p>
		<p><span>Username</span>  <%= f.text_field :username %></p>
		<p><span>Password</span><%= f.password_field :password, :class => "password" %></p>
   		<p><span>Email</span><%= f.text_field :email %></p>
 		<p><span>Location</span><%= f.collection_select :location_id, Location.all, :id, :city, :prompt => 'Select' %></p>
		<p><span>Gender</span><%= f.select :gender, options_for_select( ['Male', 'Female'] ), :prompt => 'Select' %></p>
   		<p><span>Birth Date</span>
    		<%= f.date_select :birth_date, :as => :date, :start_year => Date.today.year - 13,
                                :end_year => Date.today.year - 90, 
                                :order => [:month, :day, :year], :required => true, 
                                :prompt => true,
                                :hint => "This helps find content for you."  %></p>
   		<p><span>Promo Code</span><%= f.text_field :promo_code %></p>
		<div class="terms-info">
     	<p>By clicking on "Sign Up" below, you are agreeing to the 
     		<a href="#">Terms of Service</a> and the <a href="#">Privacy Policy</a>.</p>
		</div>
		<%= f.submit "Sign Up" %>
    </div>
  <% end %>
<% end %>
