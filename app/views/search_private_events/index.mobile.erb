<%= render :partial => 'mobile/index_form', :locals => {:title => 'Search Results'} %>

<% content_for :srch_content do %>
	<%= render :partial => 'mobile/event_search' %>
<% end %>

<%= content_for :content do -%>
<ul data-role="listview">
	<%= render :partial => 'mobile/event_list', :collection => @results, :as => :event, :locals => {:edate => Date.today} %>
</ul>
<% end -%>

<%= content_for :footer do %>
	<%= render :partial => 'mobile/page_footer', :locals => {:sflg => false} %> 
<% end %>
