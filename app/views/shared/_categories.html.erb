<!-- list all categories and related interests -->
<% @category.each do |category| %>
	<div class="interest">
		<%= getlogo(category.photo_file_name) %>
		<span style="font-weight: bold;"><%= "#{category.name.titleize}" %></span>
	</div>
	<div>
		<% category.interests.active.unhidden.each do |sub| %>		
 			<div class="prefs-cbox">
				<%= check_box_tag "user[interest_ids][]", sub.id, @user.interests.include?(sub) %><%= sub.name %>			
			</div>		
		<% end %>
	</div>
<% end %>