<div class="span-5 event-label">  	<p><%= f.label "When does it begin?" %></p>           </div>	<div class="span-19 last" id="new-event">  	<div class="span-9">		<span>Start Date </span><%= f.text_field :eventstartdate, :value => get_nice_date(@event.eventstartdate, 'Edit'), :size => 10, :id => "start-date" %> 	</div>	<div id="stime">	<div class="span-10 last">		<span>Start Time </span> <%= f.time_select :eventstarttime,{ :default => Time.now.change(:hour => 12), :simple_time_select => true, 		 		:minute_interval => 5, :time_separator => "" }, :value => chk_offset(@event.eventstarttime, @event.localGMToffset), :id=>'start-time' %>	</div>	<div class="span-19 last">		<span>Start Time Zone </span><%= f.collection_select :localGMToffset, GmtTimezone.all, :code, :description, {:selected => @user.localGMToffset} %>	</div>	</div>	<div class="span-4">		<span>Reminder </span><div class="cbox-top"><%= f.check_box :remindflg, {:id => "remflg"}, "yes", "no" %></div>	</div>	<div class="span-15 last" style="<%= !has_reminder?(@event) ? 'display:none' : '' %>" id="reminder-type">		<%= f.collection_select :remindertype, ReminderType.active, :code, :descr_title, :id=> "remtype", :prompt=>true %>			</div></div><hr /> <div id="end-dt" ><div class="span-5 event-label">  	<p><%= f.label "When does it end?" %></p>                     </div>	<div class="span-19 last" id="new-event">  	<div class="span-9">		<span>End Date </span><%= f.text_field :eventenddate, :value => get_nice_date(@event.eventenddate, 'Edit'), :size => 10, :id => "end-date" %> 	</div>	<div class="span-10 last">     	<span>End Time </span><%= f.time_select :eventendtime, { :default => Time.now.change(:hour => 12), :simple_time_select => true, :minute_interval => 5, :time_separator => "" },      				:value => chk_offset(@event.eventendtime, @event.endGMToffset), :id=>'end-time' %>	</div>	<div class="span-19 last">		<span>End Time Zone </span><%= f.collection_select :endGMToffset, GmtTimezone.all, :code, :description, {:selected => @user.localGMToffset} %>	</div></div><hr />  </div>  