<%# display user menu bar %>
<div class="menu-bkgd">
  <div class="span-24 last" id="menu">
	<div class="span-5 menu-offset" id="titlebar">
		<%= link_to get_name_or_logo, root_url %>
	</div>

	<% case main_menu %>
		<% when "Register" %>
			<div class="span-17 last welcomebar">
				<span><%= "Welcome to #{get_name_or_logo} #{current_user.username}!" %></span> 
 			</div> 
		<% when "Home" %>
			<div class="span-17 last">
 				<span><%= link_to "Sign In", new_user_session_path, :class => "signin_button round" %></span> 
 			</div> 
		<% when "User" %>
			<div class="span-9">
				<%= text_field_tag 'search', nil, :placeholder => 'Enter search term...' %>
				<%= image_tag("search1.png", :alt => "search", :size => "24x24") %>
				<%= link_to image_tag("ev-add-event.png", :size => "24x24", :class => 'event-add'), new_event_url, :title => "Add Event" %>
			</div>
			<div class="span-10 last"><%= render 'shared/menu_item' %></div>
		<% else %>
			<div class="span-17 last"><% main_menu %></div>
	<% end %>
  </div>
</div>
