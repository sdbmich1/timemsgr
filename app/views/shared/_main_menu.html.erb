  <div id="menu">
	<div class="menu-bkgd">
		<span class="menu-offset" id="titlebar"><%= link_to get_name_or_logo, root_url %></span> 

	<% case main_menu %>
		<% when "Register" %>
			<span class="welcomebar"><%= "Welcome to #{get_name_or_logo} #{current_user.username}!" %></span> 
		<% when "Home" %>
 			<span class="sign-in-btn"><%= link_to "Sign In", new_user_session_path, :class => "signin_button round" %></span> 
		<% when "User" %>
			<span class="menu-search"><%= text_field_tag 'search', nil, :placeholder => 'Enter search term...' %>
				<%= image_tag("search1.png", :alt => "search", :size => "24x24") %>
				<%= link_to image_tag("ev-add-event.png", :size => "24x24", :class => 'event-add'), new_event_url, :title => "Add Event" %>
			</span>
			<div class="span-10 last nav-right"><%= render 'shared/menu_item' %></div>
		<% else %>
			<div class="span-17 last"><% main_menu %></div>
	<% end %>
	</div>
  </div>

