<div class="span-12"><h3><center>Send Notifications</center></h3><hr /><%= form_for @notification, :id => 'notify_form', :validate => true, :remote=>true do |f| %> 	<p><strong>Notify Connections:</strong> </p>	<p><span class="span-3">My Family</span><%= f.check_box :allowPrivCircle, {:id => "allowPriv"}, "yes", "no" %></p>	<p><span class="span-3">My Friends</span> <%= f.check_box :allowSocCircle, {:id => "allowSoc"}, "yes", "no" %></p> 	<p><span class="span-3">My World</span> <%= f.check_box :allowWorldCircle, {:id => "allowWorld"}, "yes", "no" %></p>	<div class="pg-title"><strong>Additional Recipients:</strong></div>	<p>	<% (1..5).each do |i| %>      <p><span><%= 'Email' + i.to_s %></span>      <%= f.text_field 'email' + i.to_s + 'address', :size => 60 %></p>    <% end %>    </p><br />	<strong>Notice Type:</strong>	<p><%= f.select "Notice_Type", options_from_collection_for_select(@notice_types, "code", "code_title")  %></p><br />	<% ['eventid', 'eventstartdate', 'eventstarttime', 'eventenddate' ,'eventendtime', 'contentsourceID', 'event_type', 'event_name'].each do |fld| %>        <%= f.hidden_field fld, :value => @event.send(fld) %>    <% end %>    <%= f.hidden_field :event_id, :value => @event.ID %>    <%= f.hidden_field :location, :value => set_location(@event) %>	<center><%= f.submit "Send", :id=>'submit-btn' %></center><% end %></div>