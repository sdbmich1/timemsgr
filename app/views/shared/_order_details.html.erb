<table class="items">
   <tr>
    <th>Item</th>
    <th class="price">Quantity</th>
    <th class="price">Price</th>
  </tr>
  <% (1..order[:cnt].to_i).each do |i| %>
  	<% if order['quantity'+i.to_s].to_i > 0 %>
  	  <tr>
  		<td><%= order['item'+i.to_s] %></td>
  		<td class="price"><%= order['quantity'+i.to_s] %></td>
  		<td class="price"><%= number_to_currency(calc_price(order['price'+i.to_s], order['quantity'+i.to_s])) %></td>
  	  </tr>
  	<% end %>
  <% end %>
  <%= render :partial => 'shared/order_total' %>
</table>