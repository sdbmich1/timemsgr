<div class="span 12 last">
  <div id="printable">
  	<center>
    	<h3 class="grp-hdr">Payment Information<hr />
  		<div class="purchase_title">Your order has been processed.</div></h3>
  	</center>
  <p><center><span class="event-title"><%= @event.event_name %></span></center></p>
  <div class="show-item">
  	<%= render :partial => 'shared/show_event_info', :locals => {:event => @event, :buyFlg=>true} %>
  	<%= render :partial => 'shared/show_event_location', :locals => {:event => @event, :buyFlg=>true} %>
  </div>
  <div class="clear-all"></div>
  	<%= render :partial=>'shared/order_details', :locals=>{:order=>@order, :paid=>true} %>
  	<%= render :partial=>'shared/transaction_details', :locals=>{:transaction=>@transaction, :showAmt=>false} %>
  </div>
  <div class="clear-all"></div>
  <div class="mtop">Thank you for your business.</div>
  <div class="mtop">
  	<% unless mobile_device? %>
	  <center>
		<%= link_to "Print Receipt",'#', :class => "close-btn round", :id => 'print-btn' %>
		<%= link_to "Done",'#', :class => "change-btn round", :id => 'cancel-btn' %>
	  </center>
	<% end %>
  </div>
</div>
