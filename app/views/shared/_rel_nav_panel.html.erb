<!-- used to navigate user profile edit modules --><div class="span-4 pad-bot" id="user_sidebar">   <ul class="menu"> 		<li class="span-4"><%= link_to "All", relationships_path(:id =>@user), :id=>'connect_btn', :class=>'all_btn', :remote=>true %></li>		<li class="span-4"><%= link_to "Private", private_relationships_path(:id =>@user, :rtype => "Private"), :id=>'connect_btn', :class=>'prv_btn', :remote=>true %></li>		<li class="span-4"><%= link_to "Social", social_relationships_path(:id => @user, :rtype => "Social"), :id=>'connect_btn', :class=>'soc_btn', :remote=>true %></li>		<li class="span-4"><%= link_to "World", extended_relationships_path(:id => @user, :rtype => "Extended"), :id=>'connect_btn', :class=>'ext_btn', :remote=>true %></li>		<li class="span-4"><%= link_to "Pending", pending_relationships_path(:id => @user), :id=>'connect_btn', :class=>'pend_btn', :remote=>true %></li>		<% if @rel_type && controller_name == 'relationships' %>			<li><%= link_to "Add", users_path(:id => @user, :rtype => @rel_type) %></li>		<% end %>	</ul></div>