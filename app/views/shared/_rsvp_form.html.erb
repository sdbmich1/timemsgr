<div class="span-12"><h3 class="grp-hdr"><center>Event RSVP</center></h3><hr /><div id="mform" class="mtop">  <%= form_for @rsvp, :url => rsvps_path(@rsvp, :eid=>@event.id, :etype=>@event.event_type), :remote=>true do |form| %>	<%= render "mobile/error_messages", :target => @rsvp %>  		<p><%= form.select :status, options_for_select( ['Attending', 'Not Attending', 'Might Attend'] ) %></p>		<p><%= form.select :guests, options_for_select( [0, 1, 2, 3, 4, 5] ), :prompt => 'Select # of Guests' %></p>		<% (1..5).each do |i| %>        	<p><label for="<%='rsvp_guest' + i.to_s + 'name' %>"><%= 'Guest ' + i.to_s + ' Name' %></label>      		<%= f.text_field 'rsvp_guest' + i.to_s + 'name' %></p>    	<% end %>		<p><label for="rsvp_comment">Comment</label>		<%= form.text_field :comment %></p>    	<%= form.hidden_field :EventID, :value => @event.eventid %>    	<%= form.hidden_field :inviteeid, :value => @user.prof_id %>    	<%= form.hidden_field :inviteesourceID, :value => @user.ssid %>    	<%= form.hidden_field :invitersourceID, :value => @event.cid %>    	<%= form.hidden_field :subscriptionsourceID, :value => @user.ssid %>    	<%= form.hidden_field :fullname, :value => @user.hostname %>    	<%= form.hidden_field :email, :value => @user.email %>
	<%= form.submit "Submit" %>	<%= button_to "Cancel", @event %>  <% end %></div></div>