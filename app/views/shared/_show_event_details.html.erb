<p><span class="prepend-6 event-title"><%= event.event_title %></span></p><div class="span-4">  	<%= render :partial => 'shared/show_photo', :locals => {:model => event, :psize => '120x120', :file_name=>'schedule1.jpg' }%></div><div class="span-2"><%= 'Date:' %></div><div class="span-18 last">	<%= get_start_date(event.eventstartdate, event.eventenddate, "Show") %><br /></div>	<div class="span-2"><%= 'Time:'%></div>
<% if holiday?(event.event_type) %>	<div class="span-18 last"><%= "All Day" %></div><% else %>	<div class="span-18 last">		<%= " #{chk_offset(event.eventstarttime, event.localGMToffset, event.eventid)} 			- #{chk_offset(event.eventendtime, event.endGMToffset, event.eventid)}" %>	</div><% end %>
