<table>
   <tr>
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% items.each do |item| %>
  	  <tr>
  		<td><%= item.item_name %></td>
  		<td><%= item.quantity %></td>
  		<td style='text-align: right'><%= number_to_currency(calc_price(item.price, item.quantity)) %></td>
  	  </tr>
  <% end %>
  <%= render :partial => 'shared/order_total' %>
</table>