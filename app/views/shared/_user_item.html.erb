<div class="span-3 conn-user">
    <div class="pic-size">
	   <%= render :partial => 'shared/show_photo', :locals => {:model => model.profile, :file_name => "headshot2.jpg", :psize => '48x48' } %>
	</div>
    <span class="usr-label"><%= model.name %></span><br />
	<% if getMethod(@user.id, model.id) == 'post' %>
    	<%= link_to "Add", relationships_url(:id=>@user, :trkr_id=>model, :rtype=>@rel_type), :id=>'rel_id', :method => :post, :class=>"link-btn round" %>
	<% else %>
	  	<% if (controller_name =~ /users/i).nil? %>
			<%= get_rel_type(@user.id, model.id) %><br />
			<%= get_status(@user.id, model.id) %><br />
		<% end %>
      	<%= link_to getLinkTag(model.id, @user.id), relationship_url(:trkr_id=>@user, :id=>model), :method=>getMethod(@user.id, model.id), :id=>'rel_id', :class=>"link-btn round", :remote=>true %>
	<% end %>
</div>