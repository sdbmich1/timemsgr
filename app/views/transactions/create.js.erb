var formError = getFormID('#stripe_error');
var pmtForm = getFormID('#pmtForm');

<% if @transaction.errors.any? %>
    formError.html("<%= escape_javascript(error_messages_for(@transaction))%>");
	formError.show(300);
	getFormID('#payForm').attr('disabled', false);
<% else %>
	formError.hide(300);
	pmtForm.html("<%= escape_javascript( raw render(:partial => 'payment_success_form') ) %>"); 
<% end %>

<% if mobile_device? %>
	// scroll to top of page
  	$('html, body').animate({scrollTop:0}, 100);

	uiLoading(false);
<% else %>
	$("#spinner").hide(300);
<% end %>
