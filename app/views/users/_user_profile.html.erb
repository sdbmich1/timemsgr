<br /><p><%= f.label :first_name %><%= f.text_field :first_name %></p><p><%= f.label :last_name %><%= f.text_field :last_name %></p><p><%= f.label :email %><%= f.text_field :email %></p><p><%= f.label :gender %><%= f.select :gender, options_for_select( ['Male', 'Female'], :prompt => 'Select' ) %></p><p><%= f.label :birth_date %><%= f.date_select :birth_date, :as => :date, :start_year => Date.today.year - 90,               :end_year => Date.today.year - 12,                :order => [:month, :day, :year] %></p><p><%= f.label :location %><%= f.collection_select :location_id, Location.all, :id, :city, :prompt => false %></p>	