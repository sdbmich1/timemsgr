<p><span>First Name </span><%= f.text_field :first_name %></p><p><span>Last Name </span><%= f.text_field :last_name %></p><p><span>Email </span><%= f.text_field :email %></p><p><span>Gender </span><%= f.select :gender, options_for_select(["Male", "Female"], :selected=>f.object.gender) %></p><p><span>Birth Date </span><%= f.date_select :birth_date, :as => :date, :start_year => Date.today.year - 90,               :end_year => Date.today.year - 12,                :order => [:month, :day, :year] %></p><p><span>Home City </span><%= f.collection_select :location_id, Location.all, :id, :city, :prompt => false %></p>  <p>    <%= f.fields_for :host_profiles do |form| %>    	<%= render :partial => 'shared/add_photo', :locals => {:form => form} %>    <% end %>  </p>	